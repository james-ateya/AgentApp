<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerDeposits"
    android:background="#f8f9fe">

    <LinearLayout
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_searchclient"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Search Client By ID, phone # or Client #"
            android:textColor="@color/black"></EditText>

        <Button
            android:id="@+id/btnsearchdetails"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Search"
            android:textColor="@color/black"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/linearLayoutCompat">

        <TextView
            android:id="@+id/txt_clientname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Customer Name"
            android:textColor="@color/black"></TextView>

        <Spinner
            android:id="@+id/spn_accounts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:tag="Select Account Name"
            android:entries="@array/Accounts_to_select"
            android:textAlignment="textStart"></Spinner>

        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Amount"
            android:textColor="@color/black"></EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayoutCompat2">

        <Button
            android:id="@+id/btnsavedetails"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="SAVE"
            android:textSize="20dp"></Button>

        <Button
            android:id="@+id/btnprintreceipt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="Print"
            android:textSize="20dp"></Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativebottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Switch
            android:id="@+id/printerswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="togglestatehandler"
            android:switchPadding="20dp"
            android:text="Printer"
            android:textColor="@color/black"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="18dp"
            android:thumb="@drawable/switch_selector"
            android:thumbTextPadding="10dp"
            android:track="@drawable/customtrack" />
    </RelativeLayout>

</RelativeLayout>